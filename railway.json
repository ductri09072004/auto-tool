{
  "build": {
    "builder": "DOCKERFILE"
  },
  "deploy": {
    "startCommand": "python app.py",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE"
  },
  "services": [
    {
      "name": "dev-portal",
      "source": ".",
      "build": {
        "builder": "DOCKERFILE"
      },
      "deploy": {
        "startCommand": "python app.py",
        "healthcheckPath": "/",
        "healthcheckTimeout": 100
      }
    },
    {
      "name": "argocd",
      "source": ".",
      "build": {
        "builder": "DOCKERFILE",
        "dockerfile": "argocd.Dockerfile"
      },
      "deploy": {
        "startCommand": "argocd-server --insecure",
        "healthcheckPath": "/",
        "healthcheckTimeout": 100
      }
    }
  ]
}
